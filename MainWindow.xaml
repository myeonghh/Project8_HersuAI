                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- View 버튼 -->
                        <Button x:Name="logViewButton" Content="View Logs" Foreground="White" FontSize="16" FontWeight="Bold"
